<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="105dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/loginNameIcon"
    android:src="@drawable/identity" />

    <EditText
        android:id="@+id/loginTitleAdd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loginNameIcon"
        android:hint="Ti" />

    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="160dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/loginEmailIcon"
    android:src="@drawable/user"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/loginEmailAdd"
    android:layout_marginRight="20dp"
    android:layout_toRightOf="@id/loginEmailIcon"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="140dp"
    android:hint="Email or UserName"/>
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="220dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/loginPasswordIcon"
    android:src="@drawable/password1"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/loginPasswordAdd"
    android:layout_marginRight="20dp"
    android:layout_toRightOf="@id/loginPasswordIcon"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="200dp"
    android:hint="Password"/>
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="285dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/loginWebsiteIcon"
    android:src="@drawable/www"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/loginWebsiteAdd"
    android:layout_marginRight="20dp"
    android:layout_toRightOf="@id/loginWebsiteIcon"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="260dp"
    android:hint="Website (Optional)"/>
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="345dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/loginNoteIcon"
    android:src="@drawable/document"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/loginNoteAdd"
    android:layout_marginRight="20dp"
    android:layout_toRightOf="@id/loginNoteIcon"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="320dp"
    android:hint="Addition Notes (Optional)"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/addLoginDetails"
    android:layout_below="@id/loginNoteAdd"
    android:padding="10dp"
    android:layout_marginTop="40dp"
    android:text="Add Login Details"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addLoginDetails"
        android:layout_alignTop="@+id/addLoginDetails"
        android:layout_alignEnd="@+id/addLoginDetails"
        android:layout_alignBottom="@+id/addLoginDetails"
        android:layout_marginStart="61dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="3dp" />

</RelativeLayout>